import functions_framework
from flask import Request
import asyncio
import os

# Глобальна змінна для application
_application = None

def get_application():
    """Отримує або створює application"""
    global _application
    if _application is None:
        _application = Application.builder().token(TOKEN).build()
        
        # Додаємо всі обробники
        _application.add_handler(CommandHandler("start", start))
        _application.add_handler(CommandHandler("clear", clear_chat))
        _application.add_handler(CommandHandler("restart", restart_bot))
        _application.add_handler(CommandHandler("stop", stop_bot))
        _application.add_handler(CallbackQueryHandler(handle_button))
        _application.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, start))
    
    return _application

@functions_framework.http
def telegram_webhook(request: Request):
    """HTTP Cloud Function для обробки Telegram webhooks"""
    try:
        # Отримуємо application
        application = get_application()
        
        # Парсимо update з JSON
        update_dict = request.get_json(force=True)
        update = Update.de_json(update_dict, application.bot)
        
        # Обробляємо update асинхронно
        asyncio.run(application.process_update(update))
        
        return 'OK', 200
    except Exception as e:
        print(f"Error processing update: {e}")
        return 'Error', 500